seqdiag {
  # Change edge metrics
  edge_length = 150; // default value is 192
  span_height = 0;   // default value is 40

  # Change note color
  default_note_color = lightblue;

  # actors (in order left to right)
  User; Controller; Broker; APIServer; DockerOperator; Swarm; Docker; Driver; Service;

  # trigger provisioning of service instance
  User => Controller [label = "cf create-service"] {
    Controller => Broker [label = "run provisioning"] {
      Broker => APIServer [label = "create docker resource with state in_queue and wait for state change"] {
        APIServer -> DockerOperator [label = "trigger watcher for new docker resource"]
        DockerOperator => Swarm [label = "create container"] {
          Swarm => Docker [label = "create container"] {
            Docker => Driver [label = "create volume"]
          }
        }
        DockerOperator => Swarm [label = "start container"] {
          Swarm => Docker [label = "start container"] {
            Docker => Service [label = "start run script"]
          }
        }
        DockerOperator => Controller [label = "create security-group", leftnote = "Done only if needed"]
        DockerOperator => APIServer [label = "update the resource state as succeeded with response", return = "ok"]
      }
    }
  }
}
